<% provide(:title,t(:'verificate_page')) %>
<% currently_at t(:'verificate_page') %>
<%currently_admin t(:'verificate_page')%>
<div class="flex">
  <%= yield :admin_panel %>

  <div class="grow">
    <h1 class="font-bold text-4xl">Verificate#index</h1>
    <p>Find me in app/views/verificate/index.html.erb</p>


    <div class="relative overflow-x-auto">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 border-2">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3 border-2">
            <%=t(:"area")  %>
          </th>
          <th scope="col" class="px-6 py-3 border-2">
            <%=t(:"name")  %>
          </th>
          <th scope="col" class="px-6 py-3 border-2">
            <%=t(:"surname")%>
          </th>
          <th scope="col" class="px-6 py-3 border-2">
            <%=t(:"patronymic")%>
          </th>
          <th scope="col" class="px-6 py-3 border-2">
            <%=t(:"telephone")%>
          </th>
          <th scope="col" class="px-6 py-3 text-center border-2">
            <%=t(:"kadstr")%>
          </th>
          <th scope="col" class="px-6 py-3 text-center border-2">
            <%=t(:"verificate")%>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>

          <tr>
            <td colspan="6" class=" px-4 mt-6 text-xs text-center text-gray-700 uppercase">
               <%= t(:"user") %>   :  <%=user.email %>
            </td>
          </tr>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <% if user.areas.empty?  %>
              <td  colspan="6" class="px-6 py-4 ">  <%= t(:"no_data") %></td>
            <%end %>

            <% user.areas.each do |area| %>
              <td class="px-6 py-4 text-center border-2"><%= area.area %>  </td>
              <td class="px-6 py-4 text-center border-2"><%= area.name %>  </td>
              <td class="px-6 py-4 text-center border-2"><%= area.surname %></td>
              <td class="px-6 py-4 text-center border-2"><%= area.patronymic %></td>
              <td class="px-6 py-4 text-center border-2"><%= area.telephone %></td>
              <td class="px-6 py-4 text-center border-2"><%= area.kadastr %></td>

            <%end %>
            <td class=" grid  justify-items-center px-6 py-4 border-2">
              <% if user.areas.empty?  %>
                <%= button_to "НЕТ",  email_admin_user_path(user), method: :get ,class: " w-56 mx-4 my-2 text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-600 dark:focus:ring-blue-800 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 " %>

              <%else %>
                <%= button_to   t(:"verificate") ,    verificate_admin_user_path(user), method: :get, class: 'mt-3  rounded-md border-t-2 hover:border-b-2 px-3 py-1.5 text-sm font-semibold leading-6 text-gray-400 transition duration-300  ease-in-out  hover:w-full hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 ' %>
              <%end %>
            </td>

          </tr>
        <%end%>

        </tbody>
      </table>

    </div>
  </div>
</div>
